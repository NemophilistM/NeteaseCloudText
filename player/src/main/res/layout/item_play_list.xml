<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/tv_song_name_play_list" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/tv_author_name_play_list"
        android:layout_toEndOf="@+id/tv_song_name_play_list"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/tv_song_name_play_list"
        android:layout_marginStart="12dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_song_name_play_list"
        android:layout_alignBottom="@+id/tv_song_name_play_list"
        android:layout_alignParentEnd="true"
        android:background="@drawable/style_button"
        android:text="@string/remove"
        android:textColor="@color/black"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/bt_remove_play_list"
        tools:ignore="RelativeOverlap" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/grey"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>